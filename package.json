{
  "name": "clover-unity",
  "displayName": "Clover",
  "description": "Unity Support Extension",
  "version": "0.1.1",
  "publisher": "november",
  "license": "MIT",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Extension Packs"
  ],
  "icon": "resources/clover.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/novemberi/clover"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "preview": false,
  "main": "./out/extension.js",
  "contributes": {
    "icons": {
      "custom-unity": {
        "description": "unity icon",
        "default": {
          "fontPath": "./custom.woff",
          "fontCharacter": "\\e900"
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "clover-activitybar",
          "title": "Clover",
          "icon": "resources/dark/clover.svg"
        }
      ]
    },
    "views": {
      "clover-activitybar": [
        {
          "type": "webview",
          "id": "clover.mainView",
          "name": "Main",
          "icon": "resources/dark/clover.svg",
          "contextualTitle": "Clover",
          "when": "clover.workspace.valid"
        },
        {
          "type": "tree",
          "id": "clover.metaExplorer",
          "name": "Meta Explorer",
          "when": "clover.workspace.valid"
        }
      ]
    },
    "commands": [
      {
        "command": "clover.findMetaReference",
        "category": "Clover",
        "enablement": "resourceExtname == .cs || resourceExtname == .asset",
        "title": "Find Meta Reference"
      },
      {
        "command": "clover.refreshUnityProject",
        "category": "Clover",
        "title": "Refresh Unity Project",
        "enablement": "clover.workspace.valid"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "submenu": "clover.helper",
          "when": "clover.unity.initialized",
          "group": "navigation@1"
        }
      ],
      "clover.helper": [
        {
          "command": "clover.findMetaReference"
        },
        {
          "command": "clover.refreshUnityProject"
        }
      ]
    },
    "submenus": [
      {
        "id": "clover.helper",
        "label": "Clover",
        "icon": {
          "dark": "resources/dark/clover.svg",
          "light": "resources/light/clover.svg"
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "14.x",
    "@types/vscode": "^1.67.0",
    "@typescript-eslint/eslint-plugin": "^5.21.0",
    "@typescript-eslint/parser": "^5.21.0",
    "@vscode/test-electron": "^2.1.3",
    "eslint": "^8.14.0",
    "glob": "^8.0.1",
    "mocha": "^9.2.2",
    "typescript": "^4.6.4"
  },
  "dependencies": {
    "@vscode/codicons": "^0.0.35"
  }
}
