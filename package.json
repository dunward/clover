{
  "name": "clover-unity",
  "displayName": "Clover",
  "description": "Unity Engine Extension",
  "version": "0.5.0",
  "publisher": "november",
  "license": "MIT",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Snippets",
    "Programming Languages",
    "Other"
  ],
  "icon": "resources/clover.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/novemberi/clover"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "preview": false,
  "main": "./out/extension.js",
  "contributes": {
    "icons": {
      "unity-symbol": {
        "description": "unity symbol icon",
        "default": {
          "fontPath": "./media/clover-icon.woff",
          "fontCharacter": "\\e902"
        }
      },
      "unity-prefab": {
        "description": "unity prefab icon",
        "default": {
          "fontPath": "./media/clover-icon.woff",
          "fontCharacter": "\\e900"
        }
      },
      "unity-game-object": {
        "description": "unity game object icon",
        "default": {
          "fontPath": "./media/clover-icon.woff",
          "fontCharacter": "\\e901"
        }
      }
    },
    "snippets": [
      {
        "language": "csharp",
        "path": "./unitySnippets.json"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "clover-activitybar",
          "title": "Clover",
          "icon": "$(unity-symbol)"
        }
      ]
    },
    "views": {
      "clover-activitybar": [
        {
          "type": "webview",
          "id": "clover.mainView",
          "name": "Main",
          "icon": "resources/dark/clover.svg",
          "contextualTitle": "Clover",
          "when": "clover.workspace.valid"
        },
        {
          "type": "tree",
          "id": "clover.unityAssetExplorer",
          "name": "Asset Explorer",
          "when": "clover.workspace.valid"
        }
      ]
    },
    "commands": [
      {
        "command": "clover.refreshUnityProject",
        "category": "Clover",
        "title": "Refresh Unity Project",
        "enablement": "clover.workspace.valid"
      },
      {
        "command": "clover.showAttributeHelper",
        "category": "Clover",
        "title": "Show Attribute Helper",
        "enablement": "clover.workspace.valid"
      },
      {
        "command": "clover.showUnityAssetViewer",
        "category": "Clover",
        "title": "Show Unity Asset Viewer",
        "icon": "$(unity-symbol)"
      },
      {
        "command": "clover.findMetaReference",
        "category": "Clover",
        "title": "Find Meta Reference"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "clover.showUnityAssetViewer",
          "group": "navigation",
          "when": "(resourceExtname == .prefab || resourceExtname == .unity) && clover.workspace.valid"
        }
      ],
      "editor/context": [
        {
          "command": "clover.findMetaReference",
          "when": "clover.workspace.valid && resourceExtname == .cs",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "14.x",
    "@types/vscode": "^1.67.0",
    "@typescript-eslint/eslint-plugin": "^5.21.0",
    "@typescript-eslint/parser": "^5.21.0",
    "@vscode/test-electron": "^2.1.3",
    "eslint": "^8.14.0",
    "glob": "^8.0.1",
    "mocha": "^9.2.2",
    "typescript": "^4.6.4"
  },
  "dependencies": {
    "unity-yaml-parser": "^0.1.5"
  }
}
