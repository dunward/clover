{
  "name": "clover",
	"displayName": "clover",
	"description": "Unity Support Extension",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.67.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
        "onCommand:clover.syncUnityFiles"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "clover.helloWorld",
				"title": "Find Prefab Reference"
			},
			{
				"command": "clover.syncUnityFiles",
				"title": "Sync Unity Files",
				"category": "Clover"
			}
		],
		"viewsContainers": {
			"activitybar": [{
				"id": "clover-sidebar-view",
				"title": "Clover",
				"icon": "resources/clover.png"
			}]
		},
		"views": {
			"clover-sidebar-view": [
				{
					"type": "webview",
					"id": "clover-sidebar",
					"name": "Clover",
					"icon": "resources/clover.png",
					"contextualTitle": "Clover"
				}
			]
		},
		"menus": {
			"editor/context": [
				{
					"submenu": "clover/editor/prefabFinder",
					"when": "editorIsOpen"
				}
			],
			"editor/title": [
				{
					"submenu": "clover/editor/prefabFinder",
					"when": "editorIsOpen",
					"group": "navigation@1"
				}
			],
			"clover/editor/prefabFinder": [
				{
					"command": "clover.helloWorld"
				},
				{
					"command": "clover.syncUnityFiles"
				}
			]
		},
		"submenus": [
			{
				"id": "clover/editor/prefabFinder",
				"label": "Search Prefab Reference",
				"icon": "resources/clover.png"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.67.0",
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.1.1",
		"@types/node": "14.x",
		"@typescript-eslint/eslint-plugin": "^5.21.0",
		"@typescript-eslint/parser": "^5.21.0",
		"eslint": "^8.14.0",
		"glob": "^8.0.1",
		"mocha": "^9.2.2",
		"typescript": "^4.6.4",
		"@vscode/test-electron": "^2.1.3"
	}
}
